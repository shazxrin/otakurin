@page "{gameId:guid}/{platform}"
@using Otakurin.Domain.Tracking
@model EditModel

<div class="container my-3">
    <h1 class="mb-3">Edit tracking for @Model.Game.Title</h1>
    <form method="post">
        <div class="mb-3">
            <label for="HoursPlayed" class="form-label">Hours Played</label>
            <div class="d-flex flex-row align-items-center">
                <input disabled class="form-control" type="number" value="@Model.GameTracking.HoursPlayed" />
                <i class="bi bi-arrow-right mx-2" style="font-size: 1.5rem"></i>
                <input asp-for="@Model.HoursPlayed" name="HoursPlayed" class="form-control" type="number" />
            </div>
        </div>
        
        <div class="mb-3">
            <label for="Platform" class="form-label">Platform</label>
            <input disabled class="form-control" value="@Model.Platform" />
        </div>
        
        <div class="mb-3">
            <label for="Format" class="form-label">Format</label>
            <div class="d-flex flex-row align-items-center">
                <input disabled class="form-control" value="@Model.GameTracking.Format" />
                <i class="bi bi-arrow-right mx-2" style="font-size: 1.5rem"></i>
                <select asp-for="@Model.Format" name="Format" class="form-select" asp-items="Html.GetEnumSelectList<MediaTrackingFormat>()">
                </select>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="Status" class="form-label">Status</label>
            <div class="d-flex flex-row align-items-center">
                <input disabled class="form-control" value="@Model.GameTracking.Status" />
                <i class="bi bi-arrow-right mx-2" style="font-size: 1.5rem"></i>
                <select asp-for="@Model.Status" name="Status" class="form-select" asp-items="Html.GetEnumSelectList<MediaTrackingStatus>()">
                </select>
            </div>
        </div>
        
        <div class="mb-3">
            <label for="Ownership" class="form-label">Ownership</label>
            <div class="d-flex flex-row align-items-center">
                <input disabled class="form-control" value="@Model.GameTracking.Ownership" />
                <i class="bi bi-arrow-right mx-2" style="font-size: 1.5rem"></i>
                <select asp-for="@Model.Ownership" name="Ownership" class="form-select" asp-items="Html.GetEnumSelectList<MediaTrackingOwnership>()">
                </select>
            </div>
        </div>
        
        <div class="d-flex flex-row justify-content-end">
            <button type="submit" asp-page-handler="remove" class="btn btn-danger">
                <i class="bi bi-trash me-1"></i>
                Remove
            </button>

            <button type="submit" asp-page-handler="update" class="btn btn-primary ms-2">
                <i class="bi bi-arrow-bar-up me-1"></i>
                Update
            </button>
        </div>
    </form>
</div>